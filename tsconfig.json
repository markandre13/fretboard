{
    "compilerOptions": {
        "outDir": "js",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "bundler",
        "traceResolution": false,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "baseUrl": "src",
        "paths": {
            "src/*": [
                "src/*"
            ],
        },
        "plugins": [
            {
                "transform": "./m13-es-transformer.ts",
                "after": true,
            }
        ],
        "allowJs": false,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": false,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "jsxImportSource": "toad.jsx/lib",
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
    },
    "include": [
        "src/**/*",
        "test/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}